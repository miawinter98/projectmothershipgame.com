<script>
	function doCarouselScroll(event: MouseEvent) {
		const a = event.currentTarget as HTMLAnchorElement;
		if (!a) {
			console.log("[warning] failed carousel scroll: not an anchor element");
			return;
		}
		const link = (a.attributes["href"] as Attr).value as string;
		if (!link) {
			console.log("[warning] failed carousel scroll: doesn't contain href tag");
			return;
		}
		if (link[0] != "#") {
			console.log(`[warning] failed carousel scroll: href link is not anchor navigation: ${link}`);
			return;
		}

		const target = document.getElementById(link.substring(1)) as HTMLElement;
		if (!target) {
			console.log(`[warning] failed carousel scroll: could not find element with id ${link}`);
			return;
		}
		target.scrollIntoView({
			behavior: "smooth",
			block: "nearest",
			inline: "start"
		});
		event.preventDefault();
	}
	const carouselButtons = document.querySelectorAll("a.carousel-button");
	for (let elem of carouselButtons) {
		elem.addEventListener("click", doCarouselScroll);
	}
</script>