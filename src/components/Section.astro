---
interface Props {
    title: string,
    content: string
}

const { title, content } = Astro.props;
---

<section class="min-h-40 grid grid-cols-1 md:grid-cols-3">
    <div class="md:col-span-2 bg-secondary bg-opacity-25 p-4 bg-clip-slated">
        <h2 class="text-2xl font-bold leading-relaxed">{title}</h2>

        <p class="text-justify leading-snug">
            {content}
        </p>
    </div>
    <aside class="hidden md:flex">
        <slot />
    </aside>
</section>